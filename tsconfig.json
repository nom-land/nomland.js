{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "outDir": "dist",
    "lib": ["es2022", "dom", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
  },
  "include": ["src", "test"],
  "references": [{ "path": "./tsconfig.node.json" }]
}